<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="NajahHotelPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>DatabaseRelations.Meal</class>
    <class>DatabaseRelations.Guest</class>
    <class>DatabaseRelations.Room</class>
    <class>DatabaseRelations.Dependent</class>
    <class>DatabaseRelations.Person</class>
    <class>DatabaseRelations.Assigns</class>
    <class>DatabaseRelations.RoomType</class>
    <class>DatabaseRelations.Booking</class>
    <class>DatabaseRelations.Employee</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:orcl"/>
      <property name="javax.persistence.jdbc.user" value="hotelDB"/>
      <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
      <property name="javax.persistence.jdbc.password" value="hoteldb"/>
    </properties>
  </persistence-unit>
</persistence>
